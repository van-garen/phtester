<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".first_screen">

    <Button
            android:text="カメラ起動"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/take_picture" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="145dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="151dp"
            tools:layout_editor_absoluteY="138dp"/>
    <Button
            android:text="画像選択"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/select_picture" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="148dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="148dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/take_picture" app:layout_constraintHorizontal_bias="0.5"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteY="0dp"
            android:id="@+id/cameraImage" tools:ignore="MissingConstraints"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="84dp"
            android:layout_height="32dp" tools:layout_editor_absoluteY="39dp" tools:layout_editor_absoluteX="8dp"/>


</android.support.constraint.ConstraintLayout>